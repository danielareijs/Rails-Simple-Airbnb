<div>
  <h2>All our Flats (<%= @flats.count %>)</h2>
  <div class="container">
    <div class="row">
      <% @flats.each do |flat| %>
        <div class="col-4">
          <div class="border card h-100">
            <img src="https://source.unsplash.com/600x800/?house">
            <div class="card-header p-3">
              <h3><%= flat.name %></h3>
              <p><%= flat.address %></p>
              <p><%= flat.price_per_night %> <%= flat.number_of_guests %></p>
            </div>
            <div class="card-body">
              <%= link_to 'More info', flat_path(flat), class: 'link-primary text-decoration-none' %>
              <%= link_to 'Edit', edit_flat_path(flat), class: 'link-info text-decoration-none' %>
              <%= link_to 'Remove', flat_path(flat), method: :delete, data: { confirm: 'Are you sure?' }, class: 'link-danger text-decoration-none' %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
